<p id="notice"><%= notice %></p>

<h1>Controls</h1>

<table>
  <thead>
    <tr>
      <th>Guid</th>
      <th>Kind</th>
      <th>Min value</th>
      <th>Max value</th>
      <th>Deleted</th>
      <th>Deleted on</th>
      <th>Requirements text</th>
      <th>Applicable discount plans count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controls.each do |control| %>
      <tr>
        <td><%= control.guid %></td>
        <td><%= control.kind %></td>
        <td><%= control.min_value %></td>
        <td><%= control.max_value %></td>
        <td><%= control.deleted %></td>
        <td><%= control.deleted_on %></td>
        <td><%= control.requirements_text %></td>
        <td><%= control.applicable_discount_plans_count %></td>
        <td><%= link_to 'Show', control %></td>
        <td><%= link_to 'Edit', edit_control_path(control) %></td>
        <td><%= link_to 'Destroy', control, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

